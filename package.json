{
	"name": "@ts-defold/types",
	"version": "1.3.0",
	"description": "TypeScript definitions for Defold",
	"repository": "github:ts-defold/types",
	"keywords": [
		"typescript",
		"lua",
		"defold"
	],
	"author": "Justin Walsh (https://thejustinwalsh.com/)",
	"license": "MIT",
	"types": "index.d.ts",
	"files": [
		"**/*.d.ts"
	],
	"scripts": {
		"build": "type-gen && yarn patch && yarn prettier",
		"check": "tsc --noEmit",
		"patch": "node patch.cjs",
		"prepublishOnly": "yarn build && yarn run check",
		"prettier": "npx prettier ./* --write"
	},
	"ts-defold": {
		"channel": "stable",
		"version": "latest"
	},
	"dependencies": {
		"lua-types": "^2.10.1"
	},
	"devDependencies": {
		"@ts-defold/type-gen": "^0.5.2",
		"prettier": "^2.8.8",
		"typescript": "~5.0.4",
		"typescript-to-lua": "~1.15.1"
	},
	"peerDependencies": {
		"typescript-to-lua": "^1.0.1"
	}
}
