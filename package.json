{
	"name": "@ts-defold/types",
	"version": "1.3.15",
	"description": "TypeScript definitions for Defold",
	"repository": "github:ts-defold/types",
	"keywords": [
		"typescript",
		"lua",
		"defold"
	],
	"author": "Justin Walsh (https://thejustinwalsh.com/)",
	"license": "MIT",
	"types": "index.d.ts",
	"files": [
		"**/*.d.ts"
	],
	"scripts": {
		"build": "type-gen && yarn run patch && yarn lint && yarn run prettier",
		"check": "tsc --noEmit",
		"lint": "eslint index.d.ts --fix",
		"patch": "node patch.cjs",
		"prepublishOnly": "yarn run build && yarn run check",
		"prettier": "prettier \"./**\" --write"
	},
	"ts-defold": {
		"channel": "stable",
		"version": "latest"
	},
	"dependencies": {
		"lua-types": "^2.10.1"
	},
	"devDependencies": {
		"@ts-defold/type-gen": "^0.5.2",
		"@typescript-eslint/eslint-plugin": "~6.8.0",
		"@typescript-eslint/parser": "~6.8.0",
		"eslint": "~8.51.0",
		"eslint-config-prettier": "~9.0.0",
		"prettier": "^3.0.0",
		"typescript": "~5.1.0",
		"typescript-to-lua": "~1.16.0"
	},
	"peerDependencies": {
		"typescript-to-lua": ">=1.10.0"
	}
}
